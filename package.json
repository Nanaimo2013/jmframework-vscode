{
  "name": "jmframework-vscode",
  "displayName": "JMFramework for VS Code",
  "description": "Official VS Code extension for JMFramework with syntax highlighting, snippets, and development tools",
  "version": "0.3.0",
  "publisher": "jmframework",
  "preview": true,
  "icon": "icons/jmf-logo.png",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Themes"
  ],
  "activationEvents": [
    "onLanguage:jmf",
    "onLanguage:jmcss",
    "onLanguage:jmhtml",
    "onLanguage:jmconfig",
    "onLanguage:jmtemplate",
    "onLanguage:jmmodule",
    "onCommand:jmframework.compile"
  ],
  "contributes": {
    "languages": [
      {
        "id": "jmf",
        "aliases": ["JMFramework", "jmf"],
        "extensions": [".jmf"],
        "configuration": "./language-configuration/jmf.json"
      },
      {
        "id": "jmcss",
        "aliases": ["JMF CSS", "jmcss"],
        "extensions": [".jmcss"],
        "configuration": "./language-configuration/jmcss.json"
      },
      {
        "id": "jmhtml",
        "aliases": ["JMF HTML", "jmhtml"],
        "extensions": [".jmhtml"],
        "configuration": "./language-configuration/jmhtml.json"
      },
      {
        "id": "jmconfig",
        "aliases": ["JMF Config", "jmconfig"],
        "extensions": [".jmconfig"],
        "configuration": "./language-configuration/jmconfig.json"
      },
      {
        "id": "jmtemplate",
        "aliases": ["JMF Template", "jmtemplate"],
        "extensions": [".jmtemplate"],
        "configuration": "./language-configuration/jmtemplate.json"
      },
      {
        "id": "jmmodule",
        "aliases": ["JMF Module", "jmmodule"],
        "extensions": [".jmmodule"],
        "configuration": "./language-configuration/jmmodule.json"
      }
    ],
    "grammars": [
      {
        "language": "jmf",
        "scopeName": "source.jmf",
        "path": "./syntaxes/jmf.tmLanguage.json"
      },
      {
        "language": "jmcss",
        "scopeName": "source.jmcss",
        "path": "./syntaxes/jmcss.tmLanguage.json"
      },
      {
        "language": "jmhtml",
        "scopeName": "source.jmhtml",
        "path": "./syntaxes/jmhtml.tmLanguage.json"
      },
      {
        "language": "jmconfig",
        "scopeName": "source.jmconfig",
        "path": "./syntaxes/jmconfig.tmLanguage.json"
      },
      {
        "language": "jmtemplate",
        "scopeName": "source.jmtemplate",
        "path": "./syntaxes/jmtemplate.tmLanguage.json"
      },
      {
        "language": "jmmodule",
        "scopeName": "source.jmmodule",
        "path": "./syntaxes/jmmodule.tmLanguage.json"
      }
    ],
    "iconThemes": [
      {
        "id": "jmframework-icons",
        "label": "JMFramework Icons",
        "path": "./fileicons/jmframework-icon-theme.json"
      }
    ],
    "snippets": [
      {
        "language": "jmf",
        "path": "./snippets/jmf.json"
      },
      {
        "language": "jmcss",
        "path": "./snippets/jmcss.json"
      },
      {
        "language": "jmhtml",
        "path": "./snippets/jmhtml.json"
      },
      {
        "language": "jmconfig",
        "path": "./snippets/jmconfig.json"
      },
      {
        "language": "jmtemplate",
        "path": "./snippets/jmtemplate.json"
      },
      {
        "language": "jmmodule",
        "path": "./snippets/jmmodule.json"
      }
    ],
    "configuration": {
      "title": "JMFramework",
      "properties": {
        "jmframework.validate.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable JMFramework validation"
        },
        "jmframework.format.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable JMFramework formatting"
        },
        "jmframework.icons.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable JMFramework file icons"
        },
        "jmframework.cli.path": {
          "type": "string",
          "default": "",
          "description": "Path to JMFramework CLI executable"
        },
        "jmframework.autoUpdate": {
          "type": "boolean",
          "default": true,
          "description": "Automatically check for updates"
        }
      }
    },
    "commands": [
      {
        "command": "jmframework.newProject",
        "title": "JMFramework: Create New Project"
      },
      {
        "command": "jmframework.compile",
        "title": "JMFramework: Compile Current File"
      },
      {
        "command": "jmframework.runProject",
        "title": "JMFramework: Run Current Project"
      },
      {
        "command": "jmframework.generateComponent",
        "title": "JMFramework: Generate Component"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .jmf",
          "command": "jmframework.compile",
          "group": "jmframework"
        }
      ]
    }
  },
  "main": "out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nanaimo2013/jmframework-vscode.git"
  },
  "homepage": "https://github.com/Nanaimo2013/jmframework-vscode",
  "bugs": {
    "url": "https://github.com/Nanaimo2013/jmframework-vscode/issues"
  },
  "keywords": [
    "jmframework",
    "web development",
    "component",
    "syntax highlighting",
    "snippets",
    "file icons",
    "template language",
    "front-end",
    "ui framework"
  ],
  "author": {
    "name": "JMFramework Team",
    "email": "info@jmframework.dev"
  },
  "contributors": [
    {
      "name": "Nanaimo_2013",
      "url": "https://github.com/Nanaimo2013"
    }
  ],
  "license": "MIT"
} 